# TON Jetton Wallet - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ========================================
# COMMISSION SETTINGS
# ========================================
# Your TON wallet address for collecting 6% commission
# Format: UQ... (48 characters)
COMMISSION_ADDRESS=UQ_YOUR_COMMISSION_ADDRESS_HERE

# Commission address in hex format (for smart contract)
# Convert your UQ address to hex using TON tools
COMMISSION_ADDRESS_HEX=YOUR_HEX_ADDRESS_HERE

# ========================================
# DEPLOYMENT SETTINGS
# ========================================
# Mnemonic phrase for deployment wallet (24 words)
DEPLOYMENT_MNEMONIC="word1 word2 word3 ... word24"

# Private key for deployment (optional, use either mnemonic or private key)
DEPLOYMENT_PRIVATE_KEY=

# Network settings
TON_NETWORK=testnet  # testnet or mainnet
TON_API_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC

# ========================================
# JETTON SETTINGS
# ========================================
# Initial supply for new jetton (in tokens, not nano)
INITIAL_SUPPLY=1000000

# Jetton metadata
JETTON_NAME="Your Token Name"
JETTON_SYMBOL="YTKN"
JETTON_DESCRIPTION="Token with 6% commission and 1/66 lottery"
JETTON_DECIMALS=9

# ========================================
# TESTING SETTINGS
# ========================================
# Test wallet addresses (for testing only)
TEST_OWNER_ADDRESS=UQ_TEST_OWNER_ADDRESS
TEST_RECIPIENT_ADDRESS=UQ_TEST_RECIPIENT_ADDRESS

# Test amounts (in nano tokens)
TEST_TRANSFER_AMOUNT=1000000000  # 1 token
TEST_MINT_AMOUNT=100000000000    # 100 tokens

# ========================================
# API KEYS & SERVICES
# ========================================
# TON Center API Key (optional for higher rate limits)
TON_API_KEY=

# Monitoring services
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ========================================
# SECURITY SETTINGS
# ========================================
# Enable/disable debug logging (true/false)
DEBUG_MODE=false

# Enable/disable test mode (affects lottery randomness)
TEST_MODE=false

# ========================================
# BLOCKCHAIN SETTINGS
# ========================================
# Gas settings (in nano TON)
DEPLOY_GAS_LIMIT=100000000      # 0.1 TON
TRANSFER_GAS_LIMIT=50000000     # 0.05 TON
MINT_GAS_LIMIT=100000000        # 0.1 TON

# Workchain (0 for basechain, -1 for masterchain)
WORKCHAIN=0 